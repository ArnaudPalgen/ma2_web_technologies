<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}UMons LIMS{% endblock %}</title>
        
        <link rel="stylesheet" href="style.css">
        <link rel="stylesheet" href="https://bootswatch.com/4/journal/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}

        <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script>
            particlesJS.load('particles-js', 'particles.json', function() {console.log('callback - particles.js config loaded');});
        </script>
        {% block javascripts %}{% endblock %}
    </head>
    
    <body>
        <center>
        <nav class="navbar">
            <img src="lims_icon.png" alt="icon" width="100" height="100">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <h1 class="title">UMons LIMS</h1>
                </li>
            </ul>
        </nav>
        </center>
        <div class="container" style="margin-top:2%;">
            {% block body %}{% endblock %}
        </div>
        <div id="particles-js" ></div>
    </body>
</html>
