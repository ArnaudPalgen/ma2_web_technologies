{% extends 'base.html.twig' %}


{% block title %}
    Connexion administrateur
{% endblock %}
{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">

                <div class="text-center">
                    <h1 class="card-title">{{ app.user.getFullName }}</h1>
                    <button type="button" class="btn btn-light dropdown-toggle">{{ app.user.username }}</button>
                </div>

                <form method="post">
{#                    {% for message in app.flashes('error') %}#}
