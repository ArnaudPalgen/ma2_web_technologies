{% extends 'base.html.twig' %}
{%block body %}
	<div class="row">
		<div class="col-lg-3 col-md-3 col-sd-3 col-xs-3"> 
			<div class="btn-group" role="group" aria-label="Basic example">
				<button type="button" class="btn btn-secondary mr-5">Supprimer</button> 
				<button type="button" class="btn btn-secondary">Déplacer</button>
			</div>
		</div>

		<!--<input class="form-control" id="inputFT" type="text" placeholder="Search..">-->

	</div>
		<div class="row">
		<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col"> </th>
				<th scope="col"> </th>
				<th scope="col" class="text-center">N°CAS</th>
				<th scope="col" class="text-center">Nom du Produit</th>
				<th scope="col" class="text-center">Localisation</th>
				<th scope="col" class="text-center">Concentration</th>
				<th scope="col" class="text-center">Ouvert/Fermé</th>
				<th scope="col" class="text-center"> </th>
			</tr>
		</thead>
			<tbody id = "productTB">
				{% set id = 0 %}
				{% for elem in product %}
					{% set id = id + 1 %}
					<tr>
						<th scope="row">
							<div class="custom-control custom-checkbox">
								<label class="container">
									<input type="checkbox" />
									<span class="checkmark"></span>
								</label>
							</div>
						</th>
						<td>
							{% if elem.used%}
								<button type="button" class="btn btn-light">Ranger</button>
							{% else %}
								<button type="button" class="btn btn-success">Prendre</button>
							{% endif %}
						</td>
						<td>{{ elem.cas }}</td>
						<td>{{ elem.name }}</td>
						<td>{{ elem.location }}</td>
						<td>{{ elem.concentration }}</td>
						<td>
							{% if elem.open%}
								<p>Ouvert</p>
							{% else %}
								<p>Fermé</p>
							{% endif %}
						</td>
						<td>
							
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	
	<script>
	$(document).ready(function(){
	  $("#inputFT").on("keyup", function() {
		var value = $(this).val().toLowerCase();
		$("#productTB tr").filter(function() {
		  $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
		});
	  });
	});
	</script>
{% endblock %}